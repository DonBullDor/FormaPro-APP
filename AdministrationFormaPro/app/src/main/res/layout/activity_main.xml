<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GestionFormateur.MainActivity">


    <Button
        android:id="@+id/GestFormateur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:text="Gestion Formateurs"
        android:onClick="GoToMain"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/GestClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter Client"
        android:layout_marginTop="38dp"
        android:onClick="ajoutClient"
        android:layout_below="@+id/GestFormateur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:text="Statistiques"
        android:onClick="Stats"/>

    <Button
        android:id="@+id/GestFormations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GestClient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Gestion Formations" />

</RelativeLayout>
