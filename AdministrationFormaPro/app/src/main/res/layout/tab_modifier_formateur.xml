<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <EditText
        android:id="@+id/FormateurAmodifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Formateur a modifier"/>

    <Button
        android:id="@+id/chercher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/FormateurAmodifier"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:text="Chercher"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <EditText
        android:id="@+id/nomPrenom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FormateurAmodifier"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nom et prenom" />

    <EditText
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nomPrenom"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"/>

    <EditText
        android:id="@+id/tel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Numero Telephone"/>

    <EditText
        android:id="@+id/adress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tel"
        android:layout_alignRight="@+id/tel"
        android:layout_below="@+id/tel"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:hint="Adresse"/>

    <Button
        android:id="@+id/retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/FormateurAmodifier"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/FormateurAmodifier"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:text="Retour" />

    <Button
        android:id="@+id/valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:layout_alignBaseline="@+id/retour"
        android:layout_alignBottom="@+id/retour"
        android:layout_toRightOf="@+id/retour"
        android:layout_toEndOf="@+id/retour"
        style="@style/Widget.AppCompat.Button.Colored"/>

</RelativeLayout>

